{
  "compilerOptions": {
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types", "node_modules/.prisma/client"]
    
  },
  "files": ["./hardhat.config.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "./src/services/ledger/**"]
}
